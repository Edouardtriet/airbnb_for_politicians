<!-- app/views/shared/_navbar.html.erb -->
<nav class="navbar">
  <div class="container">
    <div class="navbar-brand">
      <%= link_to "Airbnb Politicians", root_path, class: "navbar-logo" %>
      <button class="navbar-toggler" type="button" id="mobile-menu-button">
        <span class="navbar-toggler-icon"></span>
      </button>
    </div>

    <div class="navbar-menu" id="navbarContent">
      <div class="navbar-end">
        <%= link_to "Home", root_path, class: "navbar-item" %>
        <%= link_to "All Listings", listings_path, class: "navbar-item" %>

        <% if user_signed_in? %>
          <div class="navbar-item dropdown">
            <a class="dropdown-toggle">
              <%= current_user.name || current_user.email %>
              <i class="arrow-down"></i>
            </a>
            <div class="dropdown-menu">
              <%= link_to "My Profile", "#", class: "dropdown-item" %>
              <%= link_to "My Listings", "#", class: "dropdown-item" %>
              <%= link_to "My Bookings", "#", class: "dropdown-item" %>
              <%= link_to "Edit Account", edit_user_registration_path, class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= button_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </div>
        <% else %>
          <%= link_to "Sign up", new_user_registration_path, class: "navbar-item btn btn-primary" %>
          <%= link_to "Log in", new_user_session_path, class: "navbar-item btn btn-outline" %>
        <% end %>
      </div>
    </div>
  </div>
</nav>
