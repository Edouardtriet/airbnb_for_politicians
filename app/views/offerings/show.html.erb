<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @offering.title %></h1>
      <p><strong>Location:</strong> <%= @offering.location %></p>

      <div class="mt-4">
        <h4>Description</h4>
        <p><%= @offering.description %></p>
      </div>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">$<%= @offering.price %> per night</h5>
          <%= link_to "Book Now", new_offering_booking_path(@offering), class: "btn btn-success btn-block mt-3" %>
        </div>
      </div>

      <div class="mt-3">
        <%= link_to "Edit", edit_offering_path(@offering), class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to "Delete", offering_path(@offering), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
        <%= link_to "Back to All Offerings", offerings_path, class: "btn btn-sm btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>
