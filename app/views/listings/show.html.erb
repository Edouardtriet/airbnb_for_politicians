<div class="container mt-5">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @listing.name %></h1>
      <p><strong>Location:</strong> <%= @listing.location %></p>
    </div>

    <div class="col-md-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">$<%= @listing.price %> per night</h5>
          <%= link_to "Book Now", new_listing_booking_path(@listing), class: "btn btn-success btn-block mt-3" %>
        </div>
      </div>

      <div class="mt-3">
        <%= link_to "Edit", edit_listing_path(@listing), class: "btn btn-sm btn-outline-secondary" %>
        <%= link_to "Delete", listing_path(@listing), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-sm btn-outline-danger" %>
        <%= link_to "Back to All listings", listings_path, class: "btn btn-sm btn-outline-primary" %>
      </div>
    </div>
  </div>
</div>
