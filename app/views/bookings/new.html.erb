<div class="container mt-5">
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card shadow">
        <div class="card-header bg-primary text-white">
          <h2 class="mb-0">Book a Session with <%= @listing.name %></h2>
        </div>

        <div class="card-body">
          <div class="row mb-4">
          <div class="col-md-4">
            <% if @listing.image.attached? %>
              <%= image_tag @listing.image, class: "img-fluid rounded" %>
            <% else %>
              <div class="bg-light text-center p-4 rounded">No Image Available</div>
            <% end %>
        </div>

            <div class="col-md-8">
              <h4><%= @listing.name %></h4>
              <p><strong>Event Type:</strong> <%= @listing.type_of_event %></p>
              <p><strong>Location:</strong> <%= @listing.location %></p>
              <p><strong>Price:</strong> $<%= @listing.price %> per night</p>
            </div>
          </div>

         <%= simple_form_for [@listing, @booking] do |f|%>
            <div class="form-group">
              <%= f.input :date_start, as: :date, label: "Start Date", input_html: { class: "form-control" } %>
            </div>

            <div class="form-group">
              <%= f.input :date_end, as: :date, label: "End Date", input_html: { class: "form-control" } %>
            </div>

            <div class="form-group">
              <%= f.input :special_requests, label: "Special request", input_html: { class: "form-control" } %>
            </div>

            <div class="form-group">
              <%= f.button :submit, "Book Now", class: "btn btn-primary" %>
            </div>

         <% end %>
        </div>

        <div class="card-footer text-center">
          <%= link_to "Cancel and return to listing", listing_path(@listing), class: "text-muted" %>
        </div>
      </div>
    </div>
  </div>
</div>
