<!-- app/views/users/dashboard.html.erb -->
<div class="container-fluid dashboard py-4">
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="dashboard-title">Welcome to Your Dashboard</h1>
      <p class="text-muted">Manage your listings and bookings in one place</p>
    </div>
  </div>

  <div class="row g-4">
    <!-- User profile information -->
    <div class="col-lg-4">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-header bg-white border-bottom-0 d-flex justify-content-between align-items-center">
          <h5 class="m-0">My Profile</h5>
          <span class="badge bg-success">Active</span>
        </div>
        <div class="card-body">
          <div class="text-center mb-4">
            <div class="avatar-circle mb-3 mx-auto">
               <div class="avatar-placeholder">
                 <%= @user&.name.present? ? @user.name.first.upcase : "U" %>
               </div>
            </div>
            <h4><%= @user&.name.present? ? @user.name : "Your Name" %></h4>
            <p class="text-muted"><%= @user&.email %></p>
          </div>

          <div class="profile-stats d-flex justify-content-around text-center mb-4">
            <div>
              <h5><%= @listings&.count || 0 %></h5>
              <small class="text-muted">Listings</small>
            </div>
            <div>
              <h5><%= @bookings&.count || 0 %></h5>
              <small class="text-muted">Bookings</small>
            </div>
          </div>

          <div class="d-grid">
            <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
          </div>
        </div>
      </div>
    </div>

    <div class="col-lg-8">
      <!-- My Listings Section -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom-0 d-flex justify-content-between align-items-center">
          <h5 class="m-0">My Listings</h5>
          <%= link_to new_listing_path, class: "btn btn-sm btn-success" do %>
            <i class="bi bi-plus-circle"></i> Create New Listing
          <% end %>
        </div>
        <div class="card-body p-0">
          <% if @listings.any? %>
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Price</th>
                    <th>Location</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @listings.each do |listing| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <div class="listing-icon me-3 rounded bg-light p-2">
                            <i class="bi bi-calendar-event"></i>
                          </div>
                          <div>
                            <strong><%= listing.name %></strong>
                          </div>
                        </div>
                      </td>
                      <td><span class="badge bg-light text-dark"><%= listing.type_of_event %></span></td>
                      <td><span class="fw-bold text-success">$<%= listing.price %></span></td>
                      <td><i class="bi bi-geo-alt"></i> <%= listing.location %></td>
                      <td class="text-end">
                        <div class="action-buttons-container">
                          <%= link_to listing_path(listing), class: "btn btn-primary me-2" do %>
                            <i class="bi bi-eye"></i> View
                          <% end %>
                          <%= link_to edit_listing_path(listing), class: "btn btn-warning me-2" do %>
                            <i class="bi bi-pencil"></i> Edit
                          <% end %>
                          <%= link_to "#", class: "btn btn-danger", data: { confirm: "Are you sure you want to delete this listing?" } do %>
                            <i class="bi bi-trash"></i> Delete
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="empty-state text-center p-5">
              <div class="empty-state-icon mb-3">
                <i class="bi bi-clipboard-x display-4 text-muted"></i>
              </div>
              <h5>No Listings Yet</h5>
              <p class="text-muted">You haven't created any listings yet.</p>
              <%= link_to new_listing_path, class: "btn btn-primary" do %>
                <i class="bi bi-plus-circle"></i> Create Your First Listing
              <% end %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- My Bookings Section (bookings made by the user) -->
      <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-white border-bottom-0 d-flex justify-content-between align-items-center">
          <h5 class="m-0">My Bookings</h5>
          <div class="dropdown">
            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="bookingsFilterDropdown" data-bs-toggle="dropdown" aria-expanded="false">
              Filter by Status
            </button>
            <ul class="dropdown-menu" aria-labelledby="bookingsFilterDropdown">
              <li><a class="dropdown-item" href="#">All Bookings</a></li>
              <li><a class="dropdown-item" href="#">Confirmed</a></li>
              <li><a class="dropdown-item" href="#">Pending</a></li>
              <li><a class="dropdown-item" href="#">Canceled</a></li>
            </ul>
          </div>
        </div>
        <div class="card-body p-0">
          <% if @bookings.where.not(status: "canceled").any? %>
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Politician/Service</th>
                    <th>Dates</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @bookings.where.not(status: "canceled").each do |booking| %>
                    <tr>
                      <td>
                        <div class="d-flex align-items-center">
                          <% if booking.listing %>
                            <div class="booking-icon me-3 rounded bg-light p-2">
                              <i class="bi bi-person"></i>
                            </div>
                            <div>
                              <strong><%= booking.listing.name %></strong>
                              <div class="small text-muted">ID: #<%= booking.id %></div>
                            </div>
                          <% else %>
                            <span class="text-muted">Listing no longer available</span>
                          <% end %>
                        </div>
                      </td>
                      <td>
                        <% if booking.date_start && booking.date_end %>
                          <div><i class="bi bi-calendar3"></i> <%= booking.date_start.strftime("%b %d, %Y") %></div>
                          <div class="small text-muted">to <%= booking.date_end.strftime("%b %d, %Y") %></div>
                        <% elsif booking.date_start %>
                          <i class="bi bi-calendar3"></i> <%= booking.date_start.strftime("%b %d, %Y") %>
                        <% else %>
                          <span class="text-muted">Dates not specified</span>
                        <% end %>
                      </td>
                      <td>
                        <% if booking.respond_to?(:status) && booking.status.present? %>
                          <span class="badge <%= booking_status_badge_class(booking.status) %>">
                            <%= booking.status.humanize %>
                          </span>
                        <% else %>
                          <span class="badge bg-secondary">Pending</span>
                        <% end %>
                      </td>
                      <td class="text-end">
                        <div class="action-buttons-container">
                          <%= link_to booking_path(booking), class: "btn btn-primary me-2" do %>
                            <i class="bi bi-eye"></i> View Details
                          <% end %>
                          <% unless booking.status == "canceled" %>
                            <%= button_to cancel_booking_path(booking),
                                method: :patch,
                                data: { confirm: "Are you sure you want to cancel this booking?" },
                                class: "btn btn-danger" do %>
                              <i class="bi bi-x-circle"></i> Cancel
                            <% end %>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="empty-state text-center p-5">
              <div class="empty-state-icon mb-3">
                <i class="bi bi-calendar-x display-4 text-muted"></i>
              </div>
              <h5>No Bookings Yet</h5>
              <p class="text-muted">You haven't made any bookings yet.</p>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Received Bookings Section (bookings made for the user's listings) -->
      <% if @received_bookings.any? %>
        <div class="card shadow-sm border-0">
          <div class="card-header bg-white border-bottom-0 d-flex justify-content-between align-items-center">
            <h5 class="m-0">Bookings for My Services</h5>
            <div class="dropdown">
              <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" id="receivedBookingsDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                Filter by Status
              </button>
              <ul class="dropdown-menu" aria-labelledby="receivedBookingsDropdown">
                <li><a class="dropdown-item" href="#">All Bookings</a></li>
                <li><a class="dropdown-item" href="#">Confirmed</a></li>
                <li><a class="dropdown-item" href="#">Pending</a></li>
                <li><a class="dropdown-item" href="#">Canceled</a></li>
              </ul>
            </div>
          </div>
          <div class="card-body p-0">
            <div class="table-responsive">
              <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                  <tr>
                    <th>Booking ID</th>
                    <th>Service</th>
                    <th>Dates</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% @received_bookings.each do |booking| %>
                    <tr>
                      <td>
                        <div>
                          <strong>Booking #<%= booking.id %></strong>
                        </div>
                      </td>
                      <td>
                        <span class="text-truncate d-inline-block" style="max-width: 150px;">
                          <%= booking.listing.name %>
                        </span>
                      </td>
                      <td>
                        <% if booking.date_start && booking.date_end %>
                          <div><i class="bi bi-calendar3"></i> <%= booking.date_start.strftime("%b %d, %Y") %></div>
                          <div class="small text-muted">to <%= booking.date_end.strftime("%b %d, %Y") %></div>
                        <% elsif booking.date_start %>
                          <i class="bi bi-calendar3"></i> <%= booking.date_start.strftime("%b %d, %Y") %>
                        <% else %>
                          <span class="text-muted">Dates not specified</span>
                        <% end %>
                      </td>
                      <td>
                        <% if booking.respond_to?(:status) && booking.status.present? %>
                          <span class="badge <%= booking_status_badge_class(booking.status) %>">
                            <%= booking.status.humanize %>
                          </span>
                        <% else %>
                          <span class="badge bg-secondary">Pending</span>
                        <% end %>
                      </td>
                      <td class="text-end">
                        <div class="action-buttons-container">
                          <%= link_to booking_path(booking), class: "btn btn-primary mb-2" do %>
                            <i class="bi bi-eye"></i> View Details
                          <% end %>
                          <% if booking.status == "pending" %>
                            <div>
                              <%= button_to "#", method: :patch, class: "btn btn-success me-2", style: "display: inline-block;" do %>
                                <i class="bi bi-check-circle"></i> Approve
                              <% end %>
                              <%= button_to "#", method: :patch, class: "btn btn-danger", style: "display: inline-block;" do %>
                                <i class="bi bi-x-circle"></i> Decline
                              <% end %>
                            </div>
                          <% end %>
                        </div>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

